@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://code.jquery.com/jquery-latest.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="row">
    <div class="col-9" style="margin-top:80px;">
        <h1 class="display-4 text-info">Welcome Check Blogs</h1>
    </div>
    @if(User.Identity.IsAuthenticated)
    {
        <div class="col-3" style="margin-top:80px;">
            <a class="btn btn-outline-info " asp-area="" asp-page="/Blog/Createblog">Create a blog</a>
        </div>
    }
</div>

<div class="row">
    @foreach (var post in Model.BlogPosts)
    {
        <div class="col-md-4 mb-4 col-sm-6">
            <div class="card" style="width: 20rem;">
                @if (post.ImageURL != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(post.ImageURL)" class="card-img-top" alt="Blog Image" style="max-width: 300px; max-height: 200px; margin-left:auto; margin-right:auto; margin-top:2%" />
                }
                <div class="card-body m-2 p-2">
                    <h5 class="card-title">Title: @post.Title</h5>
                    <a asp-page="/Blog/ContentDisplayModel" asp-route-postId="@post.PostId" class="btn btn-outline-info">View Content...</a>
                    <div class="row" style="margin-left:180px">
                        <form method="post">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <h2><button type="submit" asp-page-handler="Like" asp-route-postId="@post.PostId" class="like-button @((post.IsLiked) ? "liked" : "")" data-post-id="@post.PostId" style="background: none; border: none; padding: 0; font: inherit; cursor: pointer;margin-left:20%;">
                                    <i class="fas fa-heart"></i>
                                </button></h2>
                            }
                            else
                            {
                                <h2><button type="submit" asp-page-handler="Like" asp-route-postId="@post.PostId" class="like-button" data-post-id="@post.PostId" style="background: none; border: none; padding: 0; font: inherit; cursor: pointer;margin-left:20%;"><i class="fas fa-heart"></i>
                                </button></h2>
                            }
                        </form>
                    </div>
                    <span style="margin-left:223px">@post.Likes</span>
                </div>
            </div>
        </div>
    }
</div>
<style>
    .liked {
        color: red; /* Change the color to red */
    }
</style>




